<header class="navbar">
  <% if user_signed_in? %>
    <div class="navbar__bookmarks">
      <%= link_to "Bookmarks", bookmarks_path %>
    </div>
    <%= button_to "Sign out",
      destroy_user_session_path,
      method: :delete,
      class: "btn btn--dark navbar__right"
    %>
  <% else %>
    <%= link_to "Sign in",
      new_user_session_path,
      class: "btn btn--dark navbar__right"
    %>
  <% end %>
</header>
